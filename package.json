{
  "name": "pomor-timer",
  "version": "1.0.0",
  "description": "简单番茄计时器（Electron + Vue3 + 本地 JSON 数据存储）",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.example.pomor",
    "productName": "Pomor Timer",
    "files": [
      "electron-main.js",
      "preload.js",
      "renderer/**/*",
      "data/**/*",
      "node_modules/vue/dist/vue.global.prod.js"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "dependencies": {
    "electron-store": "^9.0.0",
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^25.0.0"
  }
}
